#!/usr/bin/env node
const argv = require('yargs').argv

if (argv._[0] === 'webpack' && argv._[1] === 'app') {
  require('../webpack/app').exec({
    env: argv.env,
    input: argv.in,
    out: argv.out,
    prod: argv.prod,
    legacy: argv.legacy,
    tsConfig: argv['ts-config']
  })
}

if (argv._[0] === 'webpack' && argv._[1] === 'lib') {
  require('../webpack/lib').exec({})
}

