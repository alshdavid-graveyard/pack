#!/usr/bin/env node
const argv = require('yargs').argv

if (!argv._.length) {
  console.log('sp pack --in src --out dist --ts-config myconfig.json')
  console.log('sp lib')
  console.log('sp test')
  console.log('sp lint')
}

if (argv._[0] === 'pack') {
  try {
    require('../commands/pack/exec')
  } catch (error) {
    console.log(error)
    // mute
  }
}

if (argv._[0] === 'lib') {
  try {
    require('../commands/lib/exec')
  } catch (error) {
    console.log(error)
    // mute
  }
}

if (argv._[0] === 'test') {
  try {
    // ts-jest
  } catch (error) {
    // console.log(error)
    // mute
  }
}

if (argv._[0] === 'lint') {
  try {
    // ts-lint
  } catch (error) {
    // console.log(error)
    // mute
  }
}
